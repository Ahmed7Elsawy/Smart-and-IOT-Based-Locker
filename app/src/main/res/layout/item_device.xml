<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/item_device_card_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/card_view_background"
        android:elevation="8dp"
        >

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            />

        <ImageView
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_person"
            />

        <ImageView
            android:id="@+id/device_power_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_power_white_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/card_view_header_color"
                android:text="device name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/device_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/card_view_text_color"
                android:text="state : OFF"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/device_circle"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:background="@drawable/green_circle"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>