<resources>
<!--    Theme.AppCompat.Light.NoActionBar-->
<!--    Theme.MaterialComponents.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="rippleStyleGray">
        <item name="mrl_rippleOverlay">true</item>              // if true, ripple is drawn in foreground; false - background
        <item name="mrl_rippleColor">#181717</item>            // color of ripple
        <item name="mrl_rippleAlpha">0.1</item>                 // alpha of ripple
    </style>

    <style name="buttonStyle">
<!--        <item name="android:background">@drawable/button_shape</item>-->
<!--        <item name="android:fontFamily">@font/gotham</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textSize">@dimen/login_sign_up_button_text_size</item>
        <item name="android:layout_marginTop">@dimen/login_sign_up_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_sign_up_button_margin_bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textSize">@dimen/login_sign_up_edit_text_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
    </style>"

    <style name="AppTheme.FloatingActionButton" >
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">@dimen/nav_view_text_size</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">@dimen/nav_view_item_height</item><!-- menu item height-->
    </style>

    <style name="myCustomMenuTextAppearance" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
